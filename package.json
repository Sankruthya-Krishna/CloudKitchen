{
    "name": "cloudkitchen",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@cap-js/postgres": "^1.7.0",
        "@sap/cds": "^7",
        "@sap/xssec": "^3",
        "express": "^4",
        "passport": "^0"
    },
    "devDependencies": {
        "@cap-js/sqlite": "^1",
        "@sap/cds-dk": "^7.9.1",
        "@sap/ux-specification": "^1.120.11",
        "rimraf": "^3.0.2"
    },
    "scripts": {
        "start": "cds-serve",
        "watch-kitchen": "cds watch --open kitchen/webapp/index.html?sap-ui-xx-viewCache=false",
        "undeploy": "cf undeploy cloudkitchen --delete-services --delete-service-keys --delete-service-brokers",
        "build": "rimraf resources mta_archives && mbt build --mtar archive",
        "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
    },
    "cds": {
        "fiori": {
            "lean_draft": true,
            "bypass_draft": true
        },
        "requires": {
            "db": {
                "imp": "@cap-js/postgres",
                "pool": {
                    "max": 20
                }
            },
            "auth": {
                "[production]": {
                    "strategy": "JWT"
                },
                "[test]": {
                    "strategy": "mock"
                }
            }
        }
    },
    "sapux": [
        "app/kitchen",
        "app/kitchen"
    ]
}